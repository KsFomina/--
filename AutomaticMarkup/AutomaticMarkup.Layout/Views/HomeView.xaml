<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:vm="clr-namespace:AutomaticMarkup.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AutomaticMarkup.Views"
            
             xmlns:Models="clr-namespace:AutomaticMarkup.Layout.Models" d:DataContext="{d:DesignInstance Type=vm:HomeViewModel}" x:Class="AutomaticMarkup.Views.HomeView"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="855">

    <Border Margin="10">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                <GradientStop Color="#D9D9D9" Offset="0.0"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2.5*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0">
                <Image Source="{Binding Image}">
                </Image>
            </Border>
        </Grid>
    </Border>
</UserControl>